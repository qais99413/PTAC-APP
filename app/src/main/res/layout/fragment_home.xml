<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="#00E2E4E6">

            <ImageView
                android:id="@+id/logo11"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@drawable/logoptac"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="80dp"
                />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/search"
                android:drawableTint="@color/white"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="left"
                android:text="Explore "
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />



            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/carservices"
                        />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btnOilChange"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#1E2196F3" />

                        <ImageView
                            android:id="@+id/imgOil"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="22dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_directions_car_24" />

                        <TextView
                            android:id="@+id/tvSub1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgOil"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"
                            android:text="Oil Change"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <Button
                            android:id="@+id/btnRoadAssist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#1E2196F3" />

                        <ImageView
                            android:id="@+id/imgRenter"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="22dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/baseline_add_road_24" />

                        <TextView
                            android:id="@+id/tvSub2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgRenter"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Road Assist"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btnMaintenance"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#1E2196F3" />

                        <ImageView
                            android:id="@+id/imgOrder22"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="22dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/repairimaintenance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgOrder22"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Maintenance"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/btnFeedback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#1E2196F3" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="63dp"
                            android:layout_height="63dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="22dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_email_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Feedback"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>